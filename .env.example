# Alpaca Markets API Configuration
# Get your API keys from: https://app.alpaca.markets/

# Paper Trading (Free - for testing)
ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_key_here

# Live Trading (Real money - use with caution)
# ALPACA_LIVE_API_KEY=your_live_api_key_here
# ALPACA_LIVE_SECRET_KEY=your_live_secret_key_here

# Data Feed Configuration
# iex = Free tier with ~2.5% market coverage
# sip = Paid tier ($99/month) with 100% market coverage
ALPACA_DATA_FEED=iex

# Trading Configuration
ALPACA_PAPER_TRADING=true
ALPACA_MAX_RETRIES=3
ALPACA_RETRY_DELAY=1.0

# Watchlist Configuration (comma-separated symbols)
WATCHLIST_SYMBOLS=AAPL,MSFT,GOOGL,TSLA,SPY,QQQ,IWM

# Redis Configuration for Real-time Data
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_STREAMS_MAXLEN=10000

# System Configuration
DATA_UPDATE_INTERVAL=1
CALCULATION_WORKERS=4
MAX_CONCURRENT_CALCULATIONS=100
BATCH_CALCULATION_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CLI Configuration
CLI_OUTPUT_FORMAT=table
CLI_TIMEZONE=UTC
CLI_REFRESH_INTERVAL=5
CLI_HISTORY_LIMIT=1000

# Worker Configuration
WORKER_POOL_SIZE=4
WORKER_TIMEOUT=30
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=2.0

# Data Processing Configuration
MAX_EVENTS_PER_SECOND=1000
PROCESSING_BATCH_SIZE=100
DATA_RETENTION_DAYS=30

# Redis Data Storage Configuration
REDIS_KEY_PREFIX=wagehood
REDIS_CONNECTION_TIMEOUT=5
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# DISCORD NOTIFICATIONS CONFIGURATION
# =============================================================================

# Core Discord Settings
DISCORD_NOTIFICATIONS_ENABLED=false
DISCORD_MULTI_CHANNEL_ENABLED=false
DISCORD_NOTIFY_TIMEFRAMES=1h,1d

# Alert Symbol List (separate from watchlist)
# For day trading: AAPL,MSFT,GOOGL,TSLA,SPY
# For swing trading: Use larger list or leave empty for all watchlist symbols
DISCORD_ALERT_SYMBOLS=AAPL,MSFT,GOOGL,TSLA,SPY

# Strategy-Timeframe Mapping (NEW FEATURE)
# Day Trading (1h): RSI Trend Following, Bollinger Band Breakout
# Swing Trading (1d): MACD+RSI Combined, Support/Resistance Breakout
DISCORD_STRATEGY_TIMEFRAME_MAPPING=macd_rsi:1d,sr_breakout:1d,rsi_trend:1h,bollinger_breakout:1h

# =============================================================================
# DISCORD WEBHOOK URLS
# =============================================================================

# Legacy single webhook (fallback for swing trading)
DISCORD_WEBHOOK_SWING_SIGNALS=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Strategy-Specific Webhooks (Multi-Channel)
# MACD+RSI Combined Strategy (Swing Trading - 1d)
DISCORD_WEBHOOK_MACD_RSI=https://discord.com/api/webhooks/your_macd_rsi_webhook_id/your_webhook_token

# RSI Trend Following Strategy (Day Trading - 1h)
DISCORD_WEBHOOK_RSI_TREND=https://discord.com/api/webhooks/your_rsi_trend_webhook_id/your_webhook_token

# Bollinger Band Breakout Strategy (Day Trading - 1h)
DISCORD_WEBHOOK_BOLLINGER_BREAKOUT=https://discord.com/api/webhooks/your_bollinger_webhook_id/your_webhook_token

# Support/Resistance Breakout Strategy (Swing Trading - 1d)
DISCORD_WEBHOOK_SR_BREAKOUT=https://discord.com/api/webhooks/your_sr_breakout_webhook_id/your_webhook_token

# =============================================================================
# DISCORD RATE LIMITING (NOTIFICATIONS PER HOUR)
# =============================================================================

# Swing Trading Strategies (Lower frequency)
DISCORD_RATE_LIMIT_MACD_RSI=8
DISCORD_RATE_LIMIT_SR_BREAKOUT=6

# Day Trading Strategies (Higher frequency) 
DISCORD_RATE_LIMIT_RSI_TREND=12
DISCORD_RATE_LIMIT_BOLLINGER_BREAKOUT=15

# =============================================================================
# STRATEGY ENABLED STATUS
# =============================================================================

# Enable/disable individual strategies
DISCORD_ENABLED_MACD_RSI=true
DISCORD_ENABLED_RSI_TREND=true
DISCORD_ENABLED_BOLLINGER_BREAKOUT=true
DISCORD_ENABLED_SR_BREAKOUT=true

# =============================================================================
# TRADING PROFILE CONFIGURATION
# =============================================================================

# Swing Trading (1d timeframe) - MACD+RSI and Support/Resistance only  
DISCORD_SWING_TRADING_STRATEGIES=macd_rsi,sr_breakout

# Day Trading (1h timeframe) - RSI Trend Following and Bollinger Band Breakout only
DISCORD_DAY_TRADING_STRATEGIES=rsi_trend,bollinger_breakout

# Legacy configuration (backward compatibility)
NOTIFY_TRADING_PROFILES=swing_trading
NOTIFY_SYMBOLS=

# Error handling configuration
DISCORD_MAX_RETRIES=3
DISCORD_RETRY_DELAY=1.0